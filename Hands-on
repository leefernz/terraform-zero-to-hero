Provider Block

terraform {
    required_version = "~> 1.10"
    required_providers {
    aws = {
        source = "hashicorp/aws"
        version = "~> 5.40"
    }     

    }
}

provider "aws" {
    region = "us-east-1"
}

Resource block 

resource "aws_instance" "demo" {
    instance_type = var.instance_value
    ami = var.ami_value
}

variablestf

variable "ami_value" {
    description = " Value of ami"
    type = string
    default = "ami-0157af9aea2eef346"
}

variable "instance_value" {
    description = " value of instance type"
    type = string
    default = "t2.medium"
}

Security group -

resource "aws_security_group" "web_sg" {
  name        = "web-server-sg"
  description = "Allow inbound HTTP, HTTPS and SSH traffic"
  vpc_id      = var.vpc_id   # Your VPC ID (passed from variable or data source)

  # Inbound rules
  ingress {
    description = "Allow HTTP"
    from_port   = 80
    to_port     = 80
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  ingress {
    description = "Allow HTTPS"
    from_port   = 443
    to_port     = 443
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  ingress {
    description = "Allow SSH"
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  # Outbound rules
  egress {
    description = "Allow all outbound traffic"
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

Outputtf
output "eks_cluster_name" {
  description = "EKS Cluster name"
  value       = aws_eks_cluster.this.name
}

